{
  "Environment": {
    "EnvironmentName": "Development",
    "IsDevelopment": true,
    "IsTest": false,
    "IsProduction": false,
    "IsDebug": true
  },
  "Api": {
    "ApiUrl": "https://api.example.com",
    "Timeout": 30,
    "RetryCount": 3,
    "RetryDelay": 500,
    "ApiVersion": "v1",
    "AuthToken": "",
    "EnableRequestLogging": false,
    "MaxConcurrentRequests": 5
  },
  "Ui": {
    "ApplicationUrl": "https://demo.litecart.net/",
    "Browser": "Chrome",
    "Headless": false,
    "ImplicitWait": 10,
    "PageLoadTimeout": 30,
    "ScriptTimeout": 30,
	"WindowWidth": 0,
	"WindowHeight": 0,
    "DownloadPath": "downloads",
    "ScreenshotPath": "screenshots"
  },
  "Logging": {
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "LogFilePath": "logs",
    "LogFileTemplate": "log-.txt",
    "LogFormat": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
    "MaxFileSize": 10485760,
    "MaxFileCount": 31,
    "IncludeStructuredProperties": true,
    "ScreenshotMode": "OnFailureOnly",
    "ScreenshotDirectory": "screenshots",
    "ScreenshotFormat": "png",
    "IncludeScreenshotInAllure": true,
    "MaxScreenshotSize": 5242880
  }
} 